# PostgreSQL Database Configuration
POSTGRES_USER=energyuser
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=texas_energy

# Backend API Configuration
DATABASE_URL=postgresql+psycopg2://energyuser:CHANGE_ME_IN_PRODUCTION@postgres:5432/texas_energy

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# Security Configuration
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
API_KEY=GENERATE_WITH_openssl_rand_hex_32

# CORS Configuration (add your production domains)
ALLOWED_ORIGINS=http://localhost,http://localhost:80,https://yourdomain.com

# Scheduler Configuration
SCRAPE_SCHEDULE_HOUR=2
SCRAPE_SCHEDULE_MINUTE=0

# Rate Limiting
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_ROOT=10/minute
